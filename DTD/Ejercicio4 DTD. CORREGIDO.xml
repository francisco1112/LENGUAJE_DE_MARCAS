                                 <apellido></apellido>
                            </actor>  
                            <actor>
                                <nombre>Vince</nombre>
                                <apellido>Vaughn</apellido>
                                 <apellido></apellido> 
                            </actor>  
                        </actores>
                    </pelicula>
                </peliculas>
            </alquiler>
            <compras>
                <DVDs>
                    <DVD>
                        <extras/>
